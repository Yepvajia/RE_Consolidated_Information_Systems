<section id="quote">
	<div class="container">
		<h1 id="form-head">Quote Form</h1>
		<form id="quote-form">
			<div class="row">
				<div class="col">
					<label for="building-type">Building Type</label>
				</div>
				<div class="col">
					<select id="building-type" style="padding: 0px 4px">
						<option id="select" value="select"><--Selection--></option>
						<option id="residential" value="residential">Residential</option>
						<option id="commercial" value="commercial">Commercial</option>
						<option id="corporate" value="corporate">Corporate</option>
						<option id="hybrid" value="hybrid">Hybrid</option>
					</select>
				</div>
			</div>
			<br>
			<div id="number-of-apartments" class="field row quote-input residential">
				<div class="col">
					<label>N. of Apartments</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Apartments" /> </div>
			</div>
			<div id="number-of-companies" class="field row quote-input commercial hybrid">
				<div class="col">
					<label>N. of Companies</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Companies" /> </div>
			</div>
			<div id="number-of-corporations" class="field row quote-input corporate">
				<div class="col">
					<label>N. of Corporations</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Corporations" /> </div>
			</div>
			<div id="number-of-floors" class="field row quote-input residential commercial corporate hybrid">
				<div class="col">
					<label>N. of Floors</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Floors" /> </div>
			</div>
			<div id="number-of-basements" class="field row quote-input residential commercial corporate hybrid">
				<div class="col">
					<label>N. of Basements</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Basements" /> </div>
			</div>
			<div id="number-of-parking-spots" class="field row quote-input commercial corporate hybrid">
				<div class="col">
					<label>N. of Parking Spots</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Parking Spots" /> </div>
			</div>
			<div id="number-of-elevators" class="field row quote-input commercial">
				<div class="col">
					<label>N. of Elevators</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Elevators" /> </div>
			</div>
			<div id="maximum-occupancy" class="field row quote-input corporate hybrid">
				<div class="col">
					<label>N. of Occupants Per Floor</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Occupants/Floors" /> </div>
			</div>
			<div id="business-hours" class="field row quote-input hybrid">
				<div class="col">
					<label>N. of Hours of Activity of The Building</label>
				</div>
				<div class="col">
					<input type="text" required placeholder="#Hours (Max 24)" /> </div>
			</div>
			<div id="answers">
				<h2>Select Plan</h2>
				<div class="row">
					<div class="col">
						<label>
							<input id="standard" type="radio" name="price" value="standard" checked>Standard</label>
					</div>
					<div class="col">
						<label>
							<input id="premium" type="radio" name="price" value="premium">Premium</label>
					</div>
					<div class="col">
						<label>
							<input id="excelium" type="radio" name="price" value="excelium">Excelium</label>
					</div>
				</div>
				<div id="elevator-amount" class="row">
					<div class="col">
						<label>Total Elevators:</label>
					</div>
					<div class="col">
						<input type="text" readonly value="0" /> </div>
				</div>
				<div id="elevator-unit-price" class="row">
					<div class="col">
						<label>Elevator Price:</label>
					</div>
					<div class="col">
						<input type="text" readonly value="$0" /> </div>
				</div>
				<div id="elevator-total-price" class="row">
					<div class="col">
						<label>Elevator Total Price:</label>
					</div>
					<div class="col">
						<input type="text" readonly value="$0" /> </div>
				</div>
				<div id="installation-fees" class="row">
					<div class="col">
						<label>Installation Fees:</label>
					</div>
					<div class="col">
						<input type="text" readonly value="$0" /> </div>
				</div>
				<div id="final-price" class="row">
					<div class="col">
						<label>Total Price:</label>
					</div>
					<div class="col">
						<input type="text" readonly value="$0" /> </div>
				</div>
			</div>
		</form>
	</div>
</section>
<section class="parallax parallax-1" style="background-image: url('r_assets/M.jpg');">
	<div class="overlay dark-3"></div>
	<div class="container">
		<div class="text-center">
			<h2 class="fs-40 fw-300">Reaching for the Stars since 1976</h2> <a class="btn btn-default btn-lg" href="#">GET A QUOTE</a> &nbsp; OR &nbsp;
			<%= link_to 'CONTACT US',root_path,class:'btn btn-primary btn-lg'%>
		</div>
	</div>
</section>
