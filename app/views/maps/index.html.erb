<html>
  <head>
    <title>Info Windows</title>
    <%# <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script> %>

    <%# <script type="module" src="app/views/maps/index.js"></script> %>
    <script>
      console.log("<%=ENV['MAPS_API']%>");
    </script>
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyANa8Gl7Pd2Kqtp3br2G0hxZn1FP3X4EC0"></script>
    <script src="https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  </head>
  <body>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
      <div style='width: 1000px;'>
        <div id="map" style='width: 1000px; height: 550px;'></div>
      </div>
      <h2>All Addresses</h1>
    </div>
    <script>
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {
        center: {lat: 40.00643165134336, lng: -102.05080059192993},
        zoom: 4
      }, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        // handler.fitMapToBounds();
      });
    </script>
  </body>
</html>
